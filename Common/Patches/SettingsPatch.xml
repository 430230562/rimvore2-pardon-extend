<?xml version="1.0" encoding="utf-8"?>

<Patch>

	<Operation Class="XmlExtensions.OptionalPatch">
        <modId>Pardon.RV2Extend</modId>
        <key>HideLightGenitals</key>
        <defaultValue>false</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationAdd">
                <xpath>Defs/HediffDef[@Name='LightGenitals_GenitalBase']</xpath>
                <value> 
                    <stages>
                        <li>
                            <becomeVisible>false</becomeVisible>
                            <minSeverity>0</minSeverity>
                        </li>
                    </stages>
                </value>
            </Operation>
        </caseTrue>
    </Operation>

    <Operation Class="XmlExtensions.UseSetting">
        <modId>Pardon.RV2Extend</modId>
        <key>ReformTime</key>
        <defaultValue>1200</defaultValue>
        <apply>
            <Operation Class="XmlExtensions.PatchOperationAddOrReplace">
                <xpath>/Defs/RimVore2.VoreStageDef[@Name='Womb_Reform']/passConditions</xpath>
                <value> <passConditions>
                <li Class="RimVore2.StagePassCondition_Timed">
                <duration> {ReformTime} </duration>
                </li>
                </passConditions> </value>
            </Operation>
        </apply>
    </Operation>
	
</Patch>
